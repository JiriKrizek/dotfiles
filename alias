# Python
#alias pip='pip-python'

# mkdir
function mcd() {
  mkdir -p "$1" && cd "$1";
}

#Get external ip
alias ifconfig-ext='curl ifconfig.me'

# unrar
alias unrar='unrar x'

alias go='gnome-open'

#Atool
alias au="aunpack"
alias ap="apack"
alias al="als"

# LS
alias lt="ls -tr"
alias lt1="ls -tr1"
alias lti="ls -tr1"
alias ll="ls -l"

alias lcom='ls -trl --time-style="+%Y-%m-%d %H:%M" |grep `date "+%Y-%m-%d"`'

# GIT
alias glog='git log --all --graph --pretty="tformat:%C(yellow)%h%Cblue%d%Creset %s %C(red) %an, %ar%Creset"'
alias gc='git commit -v'
alias ga='git add'
alias gp='git push'
alias gs='git status -sb'
alias gd='git diff'
alias gdc='git diff --cached'
alias gma='git commit --amend -m'
alias gb='git branch'
alias gco='git checkout'
alias gcl='git clone'
alias grma='git ls-files -z --deleted | xargs -0r git rm'

# bundle
alias be='bundle exec'
alias ber='bundle exec ruby'

alias cp='nocorrect cp'            # don't correct spelling for 'cp'
alias mkdir='nocorrect mkdir'      # don't correct spelling for 'mkdir'
alias mv='nocorrect mv'            # don't correct spelling for 'mv'

alias rscp='rsync -aP'
alias rsmv='rsync -aP --remove-source-files'

# tmux
alias tma='tmux attach -d -t'
alias git-tmux='tmux new -s $(basename $(pwd))'
alias mc='. /usr/lib/mc/mc-wrapper.sh'

