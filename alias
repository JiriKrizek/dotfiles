# Python
alias pip='pip-python'

# mkdir
function mcd() {
  mkdir -p "$1" && cd "$1";
}

#Get external ip
alias ifconfig-ext='curl ifconfig.me'

# unrar
alias unrar='unrar x'

alias go='gnome-open'

# LS
alias lt="ls -tr"
alias lt1="ls -tr1"
alias lti="ls -tr1"

alias c="cd /mnt/r/Downloads/completed"
alias lcom='ls -trl --time-style="+%Y-%m-%d %H:%M" |grep `date "+%Y-%m-%d"`'

# GIT
alias glog='git log --all --graph --pretty="tformat:%C(yellow)%h%Cblue%d%Creset %s %C(red) %an, %ar%Creset"'
alias gc='git commit -v'
alias ga='git add'
alias gp='git push'
alias gs='git status'
alias gd='git diff'
alias gdc='git diff --cached'
alias gma='git commit --amend -m'
alias gb='git branch'
alias gco='git checkout'
alias gcl='git clone'

alias cp='nocorrect cp'            # don't correct spelling for 'cp'
alias mkdir='nocorrect mkdir'      # don't correct spelling for 'mkdir'
alias mv='nocorrect mv'            # don't correct spelling for 'mv'

